<view class='sumittask centered'>
  <button bindtap="pushgoods" class="bg-red round" bindtap='videoad'>获取次数({{seenum}})</button>
  <button bindtap="sortgoods" class="bg-red round" wx:if="{{ifauthorized}}" bindtap='qrcode'>
    再玩一次
  </button>
  <button bindtap="sortgoods" class="bg-red round" wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo">
    再玩一次
  </button>
</view>
<view class="cu-modal show" wx:if="{{deletemodel}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">删除问题</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">确定要这个问题吗？</view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn line-green text-green" bindtap="hideModal">取消</button>
        <button class="cu-btn bg-green margin-left" bindtap="delquestion">确定</button>
      </view>
    </view>
  </view>
</view>